<div class="create">
  <div class="container">
   	<%= form_for(@message) do |f| %> 
       	<div class="form-group">
            <%= f.label :genere %>
            <%= f.collection_select :genere_id, @generes, :id, :name, {} %>
        </div>
  		<div class="field"> 
    		<%= f.label :message %><br> 
    		<%= f.text_area :content %> 
  		</div> 
  		<div class="actions"> 
    		<%= f.submit "Create" %> 
  		</div> 
		<% end %>
  </div>
</div>

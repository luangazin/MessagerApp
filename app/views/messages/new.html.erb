<div class="panel panel-default container">
  <div class="panel-body">
   	<%= form_for(@message) do |f| %> 
       	<div class="form-group">
            <%= f.label :genere %>
            <%= f.collection_select :genere_id, @generes, :id, :name, {}, class: "form-control" %>
        </div>
  		<div class="field"> 
    		<%= f.label :message %><br> 
    		<%= f.text_area :content, class: "form-control" %> 
  		</div> 
  		<div class="actions"> 
    		<%= f.submit "Create", class: "btn btn-warning"%> 
    		<%= f.submit "Cancel", class: "btn btn-info"%> 
  		</div> 
		<% end %>
  </div>
</div>
